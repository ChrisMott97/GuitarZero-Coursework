<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!--
 * ItemContainerView.
 *
 * @author  Chris Mott.
 * @version 1.00, January 2019.
 -->
<fx:root prefHeight="100.0" prefWidth="100.0" type="javafx.scene.layout.Pane" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0">
      <children>
          <ImageView fx:id="imageView" preserveRatio="true">
            <viewport>
               <Rectangle2D height="80.0" width="80.0" />
            </viewport>
            <VBox.margin>
               <Insets left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
         </ImageView>
          <Label fx:id="label" textAlignment="CENTER" wrapText="true">
            <font>
               <Font size="7.0" />
            </font>
         </Label>
      </children>
   </VBox>
</fx:root>
